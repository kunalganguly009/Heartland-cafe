<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>The Heartland CAFÉ & RESTRO</title>

  <!-- CSS -->
  <link rel="stylesheet" href="/css/global.css" />
  <link rel="stylesheet" href="/css/index_hero.css" />
  <link rel="stylesheet" href="/css/index_gallary.css" />
  <link rel="stylesheet" href="/css/index_about.css" />
  <link rel="stylesheet" href="/css/index_cards.css" />
  <link rel="stylesheet" href="/css/index_banner.css" />
  {{!-- <link rel="stylesheet" href="/css/onscroll.css" /> --}}
</head>
<body>

  <!-- Navbar Partial -->
  {{> navbar}}

{{!-- hero section --}}
<section id="home" class="hero" aria-label="Hero">
  <!-- Background Image Layer -->
  <div class="bg-layer" aria-hidden="true"></div>
  <div class="hero-bg-image" aria-hidden="true"></div>

  <div class="hero-inner">
    <div class="hero-copy">
      <span class="eyebrow">New — Seasonal Roast</span>
      <h2 class="title">{{text.title}}</h2>
      <p class="lead">
       {{text.desc}}
      </p>

      <div class="hero-actions">
        <a href="/menu" class="btn btn-primary">
          View Menu
          <svg xmlns="http://www.w3.org/2000/svg" style="margin-left:6px" width="16" height="16" viewBox="0 0 24 24" fill="none">
            <path d="M5 12h14" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M12 5l7 7-7 7" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>

        {{!-- <a class="btn btn-outline" href="#footer">Reserve Table</a> --}}
        <form action="/book-table" method="POST" target="_blank">
  <button type="submit" class="btn btn-outline" >Book a Table</button>
</form>
      </div>
    </div>

    <div class="visual" aria-hidden="true">
  <div class="gallery">
    {{#each images}}
    <img src="{{this.image}}" alt="" />
    {{/each}}
    <img src="{{mainImage.image}}" alt="" />

    
    

  </div>
</div>


  <!-- Floating sparks -->
  <div class="spark s1" aria-hidden="true"></div>
  <div class="spark s2" aria-hidden="true"></div>
  <div class="spark s3" aria-hidden="true"></div>
</section>

{{!-- about section  --}}
<section id="about" class="about-section">
  <div class="about-container">
    <div class="about-image">
      <img src="{{index_about_image.image}}" alt="Cafe interior">
    </div>

    <div class="about-content">
      
      <h2>{{index_about_text.title}}</h2>
      <p class="about-sub">{{index_about_text.desc1}}</p>
      <p>{{index_about_text.desc2}}</p>

      <div class="about-actions">
        {{!-- <a class="btn btn-primary" href="#footer">Book a Table</a> --}}
        <form action="/book-table" method="POST" target="_blank">
  <button type="submit" class="btn btn-primary">Book a Table</button>
</form>
        <a class="btn btn-outline" href="/menu">Explore Menu</a>
      </div>
    </div>
  </div>

  <!-- floating decorative bubbles -->
  <div class="bubble b1"></div>
  <div class="bubble b2"></div>
  <div class="bubble b3"></div>
</section>

<!-- MENU PREVIEW SECTION -->
<section id="menu" class="menu-section" aria-labelledby="menuTitle">
  <div class="menu-header">
    <div class="menu-header-text">
      <h3 id="menuTitle">Highlights from our menu</h3>
      <p class="menu-subtitle">Handpicked favorites — bold, fresh, and shareable.</p>
    </div>
  </div>

  <div class="menu-grid">
    {{#each index_menu_cards}}
      <article class="menu-card reveal">
        <div class="menu-image">
          <img src="{{this.image}}" alt="{{this.title}}">
        </div>
        <div class="menu-card-content">
          <h3>{{this.title}}</h3>
          <p>{{this.description}}</p>
        </div>
      </article>
    {{/each}}
  </div>
</section>







{{> footer}}




  
  <!-- JS -->
  <script src="/js/navbar.js"></script>
  <script src="/js/index.js"></script>
  {{!-- <script src="/js/onscroll.js"></script> --}}
</body>
</html>




